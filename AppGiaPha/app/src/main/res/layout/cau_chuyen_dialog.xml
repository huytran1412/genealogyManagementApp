<!-- res/layout/activity_add_family_tree.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/item_level"
    android:padding="16dp"
    android:layout_height="wrap_content">
    <!-- EditText để nhập tên gia phả -->
    <EditText
        android:backgroundTint="@color/white"
        android:id="@+id/edtStory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        android:layout_margin="16dp"
        android:hint="@string/editTextStoryHint"
        android:inputType="textMultiLine" />
    <Button
        android:id="@+id/btnAddStory"
        android:fontFamily="@font/font1"
        android:backgroundTint="#f0de74"
        android:layout_below="@+id/edtStory"
        android:textColor="#a00000"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/btnAddStoryText" />

</RelativeLayout>
