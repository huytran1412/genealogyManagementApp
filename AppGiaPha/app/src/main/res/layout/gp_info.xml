<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tenGiapha"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/font1"
        android:text="@string/giaPha"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />
    <ImageButton
        android:src="@drawable/edit"
        android:layout_alignParentRight="true"
        android:backgroundTint="@android:color/transparent"
        android:layout_width="48dp"
        android:id="@+id/btnEdit"
        android:layout_marginLeft="15dp"
        android:layout_height="48dp"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imgUs"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/tenGiapha"
        android:src="@drawable/us2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:tint="@color/black" />
    <TextView
        android:layout_toRightOf="@id/imgUs"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/rvLevel"
        android:layout_below="@+id/tenGiapha"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:fontFamily="@font/font1"
        android:text="@string/giaPha"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_toRightOf="@+id/rvLevel"
        android:layout_marginTop="10dp"
        android:id="@+id/imgUs2"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/tenGiapha"
        android:src="@drawable/p"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:tint="@color/black" />
    <TextView
        android:layout_toRightOf="@id/imgUs2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/rvTv"
        android:layout_below="@+id/tenGiapha"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:fontFamily="@font/font1"
        android:text="@string/giaPha"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>